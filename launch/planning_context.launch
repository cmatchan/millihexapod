<launch>
    <!-- The semantic description that corresponds to the URDF -->
    <param name="robot_description_semantic" textfile="$(find millihex_moveit_config)/config/millihex.srdf" />

    <!-- Load updated joint limits (override information from URDF) -->
    <group ns="robot_description_planning">
        <rosparam command="load" file="$(find millihex_moveit_config)/config/joint_limits.yaml"/>
        <rosparam command="load" file="$(find millihex_moveit_config)/config/cartesian_limits.yaml"/>
    </group>

    <!-- Load default settings for kinematics; these settings are overridden by settings in a node's namespace -->
    <group ns="robot_description_kinematics">
        <rosparam command="load" file="$(find millihex_moveit_config)/config/kinematics.yaml"/>
    </group>
</launch>
