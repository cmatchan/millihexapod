<launch>
    <!-- Spawn Object in Gazebo -->
    <arg name="object_name" default="obstacle" />

    <!-- Object spawn position -->
    <arg name="x" default="0.0" />
    <arg name="y" default="0.0" />
    <arg name="z" default="0.2" />

    <!-- Load the URDF into the ROS Parameter Server -->
    <param name="object_description" textfile="$(find millihexapod)/world/obstacle.urdf" />

    <!-- Send a service call to gazebo_ros to spawn a URDF robot -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -x $(arg x) -y $(arg y) -z $(arg z)  -model $(arg object_name) -param object_description" />

</launch>